extends ../layouts/main.pug

block content
  main.contact-page
    .hero-section
      .hero-content
        h1 Contact Us
        p.hero-subtitle We're here to help you and your pets

    .contact-container
      .contact-info
        h2.section-title Our Clinic Information
        .info-card
          .info-icon
            i.fas.fa-map-marker-alt
          .info-content
            h3 Address
            p 120 Pet Street, Animal City
        .info-card
          .info-icon
            i.fas.fa-phone
          .info-content
            h3 Phone
            p (123) 456-7890
        .info-card
          .info-icon
            i.fas.fa-envelope
          .info-content
            h3 Email
            p info@axewoodvet.com
        .info-card
          .info-icon
            i.fas.fa-clock
          .info-content
            h3 Working Hours
            p Monday-Friday: 8:00 AM - 8:00 PM
            p Saturday: 9:00 AM - 5:00 PM
            p Sunday: Emergency only

      .contact-form
        h2.section-title Send Us a Message
        form#contactForm(action="/api/support" method="POST")
          .form-group
            label(for="name") Your Name
            input(type="text" id="name" name="name" required)
          .form-group
            label(for="email") Email
            input(type="email" id="email" name="email" required)
          .form-group
            label(for="phone") Phone (Optional)
            input(type="tel" id="phone" name="phone")
          .form-group
            label(for="subject") Subject
            select(id="subject" name="subject" required)
              option(value="" disabled selected) Select a subject
              option(value="appointment") Appointment Booking
              option(value="question") General Question
              option(value="emergency") Emergency
              option(value="feedback") Feedback
          .form-group
            label(for="message") Message
            textarea(id="message" name="message" rows="5" required)
          button.button.primary(type="submit") Send Message

    section.map-section
      iframe(
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3022.2152091790357!2d-73.98784492452582!3d40.74844097138988!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDDCsDQ0JzU0LjQiTiA3M8KwNTknMTAuMiJX!5e0!3m2!1sen!2sus!4v1620000000000!5m2!1sen!2sus"
        width="100%"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
      )