extends ../layouts/main.pug

block content
  .error-container
    .error-content
      h1.error-title= message || 'Something went wrong'
      
      if error
        pre.error-details= error.stack || error.message || JSON.stringify(error, null, 2)
      
      .error-actions
        a.button.primary(href="/") Go to Homepage
      .error-support
        p Need help? Contact our support team:
        a(href="mailto:support@axewoodvet.com") support@axewoodvet.com