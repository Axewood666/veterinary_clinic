doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title ? title + ' - ' : ''}Ветеринарная клиника
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/style.css")
    link(rel="stylesheet", href="/css/client.css")
    link(rel="stylesheet", href="/css/layout.css")
    block styles
    
  body    
    .client-container
      .sidebar
        .sidebar-header
          h3 Личный кабинет
          if user && user.name
            p.user-name= user.name
            
        .sidebar-menu
          ul.nav.flex-column
            li.nav-item
              a.nav-link(href="/client/dashboard") 
                i.bi.bi-speedometer2
                span Главная
            li.nav-item
              a.nav-link(href="/client/pets") 
                i.bi.bi-heart
                span Мои питомцы
            li.nav-item
              a.nav-link(href="/client/appointments") 
                i.bi.bi-calendar-event
                span Мои приемы
            li.nav-item
              a.nav-link(href="/client/appointment") 
                i.bi.bi-plus-circle
                span Записаться на прием
            li.nav-item
              a.nav-link(href="/client/profile") 
                i.bi.bi-person
                span Мой профиль
                
        .sidebar-footer
          a.btn.btn-sm.btn-outline-secondary(href="/auth/logout") Выход
          
      .main-content
        .container
          if error
            .alert.alert-danger.mt-3
              p= error
              
          if success
            .alert.alert-success.mt-3
              p= success === true ? 'Операция выполнена успешно' : success
                
          block content
          
    include ../partials/footer.pug
    
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css")
    script(src="/js/main.js")
    script(src="/js/client.js")
    block scripts
