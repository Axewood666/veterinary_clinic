extends ../layouts/main.pug

block content
  .error-container
    .error-content
      h1.error-title= message || 'Что-то пошло не так'
      
      if error
        pre.error-details= error.stack || error.message || JSON.stringify(error, null, 2)
      
      .error-actions
        a.button.primary(href="/") На главную
        a.button.primary(href="/auth/login") Войти
        a.button.primary(href="/auth/register") Зарегистрироваться

      .error-support
        p Нужна помощь? Свяжитесь с нашей поддержкой:
        a(href="mailto:support@axewoodvet.com") support@axewoodvet.com