extends ../layouts/main.pug

block content
  section.services-section-main
      .container
        h2.section-title Наши услуги
        .services-grid
          for service in services
            .service-card
              h3.service-title= service.name
              p.service-description= service.description
              img.img-service(src=service.image alt=service.name)
