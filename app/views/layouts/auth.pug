doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{title || 'Ветеринарная клиника - Авторизация'}
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css")
    link(rel="stylesheet", href="/css/auth.css")
    block styles
  
  body.bg-light
    .container
      .row.justify-content-center.align-items-center.min-vh-100
        .col-md-8.col-lg-6.col-xl-5
          .text-center.mb-4
            a(href="/")
              img.mb-3(src="/images/logo.png", alt="Ветеринарная клиника", width="120")
            h1.h4 Ветеринарная клиника
          
          block content
          
          .text-center.mt-4
            p.text-muted.small &copy; 2024 Ветеринарная клиника. Все права защищены.
          
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js")
    block scripts
